{
  "compilerOptions": {
    "types": ["jest", "node"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "ES2020",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./public/*"],
      "@components/*": ["./src/components/*"],
      "@config": ["./src/config.ts"],
      "@containers/*": ["./src/containers/*"],
      "@constants/*": ["./src/constants/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@messages/*": ["./src/messages/*"],
      "@pages/*": ["./src/pages/*"],
      "@store/*": ["./src/store/*"],
      "@styles/*": ["./src/styles/*"],
      "@tests/*": ["./testUtils/*"],
      "@utils/*": ["./src/utils/*"],
      "@modules/*": ["./src/modules/*"],
      "@ui/*": ["./src/ui/*"],
      "@libs/*": ["./src/libs/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "src/**/*.test.ts*",
    "src/**/*.stories.ts*"
  ]
}
