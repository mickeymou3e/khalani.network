{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
    "module": "esnext",
    "allowJs": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "types": ["jest", "node"],
    "noImplicitAny": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ES6",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./public/*"],
      "@components/*": ["./src/components/*"],
      "@containers/*": ["./src/containers/*"],
      "@config": ["./config.json"],
      "@constants/*": ["./src/constants/*"],
      "@graph/*": ["./src/graph/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@store/*": ["./src/store/*"],
      "@styles/*": ["./src/styles/*"],
      "@tests/*": ["./testUtils/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*", "config.json"],
  "exclude": [
    "node_modules",
    "scr/**/*.test.ts",
    "scr/**/*.test.tsx",
    "scr/**/*.mocks.ts"
  ]
}
