{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "AWS": "${relayer_arn}"
            },
            "Action": [
                "kms:GetPublicKey",
                "kms:Sign"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Principal": {
                "AWS": "${account_id}:root"
            },
            "Action": [
                "kms:*"
            ],
            "Resource": "*"
        }
    ]
}