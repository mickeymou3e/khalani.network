{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "lib": ["es2017", "es7", "es6", "dom"],
      "declaration": true,
      "outDir": "build",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "useUnknownInCatchVariables": false
    },
    "exclude": [
      "node_modules",
      "build"
    ]
}